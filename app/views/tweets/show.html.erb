<nav class="green lighten-1">
  <div class="nav-wrapper">
    <a href="#" class="brand-logo">日記</a>
    <ul id="nav-mobile" class="right hide-on-med-and-down">
      <% if user_signed_in? %>
        <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
        <li><%= link_to "一覧に戻る","/tweets", method: :get %></li>
      <% else %>
        <li><%= link_to "え、くんの？","/users/sign_in", method: :get %></li>
        <li><%= link_to "アカウント欲しい？",new_user_registration_path, method: :get %></li>
      <% end %>
    </ul>
  </div>
</nav>

<div class="row">
  <div class="col s6 offset-s3">
    <div class="card">
    <%= @tweet.text %>
      <div class="card-content">
        <div class="card-action">
        <% if user_signed_in? %>
           <div class="col s6 offset-s10">
          <%= link_to "編集", "/tweets/#{@tweet.id}/edit", method: :get, class: 'btn btn-edit' %>
           </div>
        <%end%>
        </div>
      </div>
    </div>
  </div>
</div>