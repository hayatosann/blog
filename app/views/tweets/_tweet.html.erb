<div class="row">
  <div class="col s6 offset-s3">
    <% @tweets.each do |tweet| %>
      <div class="card">
       <div class="card-panel light-green">
        <div class="card-title">
          <span class="card-title">今日の出来事は？</span>
        </div>
        <div class="card-content">
          <h1><%= tweet.user.nickname %></h1>
          <%= tweet.text %>
          <div class="card-action">
          <% if user_signed_in? %>
            <%= link_to "詳細", "/tweets/#{tweet.id}", method: :get, class: 'btn btn-edit' %>
            <%= link_to "削除", "/tweets/#{tweet.id}", method: :delete, class: 'btn btn-danger', data: { confirm: '削除します。よろしいですか' } %>
            <%= link_to "編集", "/tweets/#{tweet.id}/edit", method: :get, class: 'btn btn-edit' %>
          <% else %>
            ログインしてね
          <% end %>
          </div> 
        </div>
       </div>
      </div>
    <% end %>
  </div>
</div>

    